		<open src="viewtopic.php">
			<edit>
				<find><![CDATA[// Replace naughty words in title
$topic_data['topic_title'] = censor_text($topic_data['topic_title']);]]></find>
				<action type="after-add"><![CDATA[	//start BEW_MOD-project

	// Add TWC_Lang1
	$user->add_lang('mods/twcmod1');

	//Auslesen der Daten

	$sql = 'SELECT star, feed
		FROM ' . TOPICS_TABLE . "
		WHERE topic_id = " . (int) $topic_id;

	$result = $db->sql_query($sql);
	while ($row = $db->sql_fetchrow($result)) 
	{
		//Konfigurieren der Variablen
		$feed = $row['feed'];
		$starcalc = $row['star'];

		//Kontrollieren ob eine Bewertung abgegeben wurde bzw Berechnen
		if ($starcalc > 1)
		{
			$starsum = $starcalc/$feed;
		}
		else
		{
			$starsum = 0;
		}

		//Auswählen der Sternbildnummer
		if ($starsum < 0.4) {
			$star = 0; 
		}
		elseif ($starsum < 0.9) {
			$star = 11; 
		}
		elseif ($starsum < 1.4) {
			$star = 1; 
		}
		elseif ($starsum < 1.9) {
			$star = 12; 
		}
		elseif ($starsum < 2.4) {
			$star = 2; 
		}
		elseif ($starsum < 2.9) {
			$star = 13; 
		}
		elseif ($starsum < 3.4) {
			$star = 3; 
		}
		elseif ($starsum < 3.9) {
			$star = 14; 
		}
		elseif ($starsum < 4.4) {
			$star = 4; 
		}
		elseif ($starsum < 4.9) {
			$star = 15; 
		}
		else {
		$star = 5; 
		}

		$starsum = sprintf("%01.2f", $starsum);

		//Konfigurieren der Templatevariablen
		$template->assign_vars(array(
			'N_STAR' 		=> $star,
			'N_FEED' 		=> $feed,
			'D_STARMAKE' 		=> append_sid("{$phpbb_root_path}star.$phpEx", 't=' . $topic_id),
			'N_STARSUM' 		=> $starsum
		));
	}

	// Ende BW_Mod
]]></action>
			</edit>
